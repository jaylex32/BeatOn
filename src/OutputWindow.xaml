<Window
    x:Class="WpfApp1.OutputWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Download Logs"
    Width="600"
    Height="400">
    <Grid Background="White">
        <ScrollViewer>
            <TextBox
                x:Name="OutputTextBox"
                AcceptsReturn="True"
                Background="Black"
                Foreground="White"
                IsReadOnly="True"
                Text="{Binding OutputText, Mode=OneWay}"
                TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
</Window>